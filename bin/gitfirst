#!/bin/sh
##### edit by yuji katsuta 2023.04.23
if [ "$1" = "" ]
then
 echo "usage: $0 email firstname lastname ignorefiles"
 echo "usage: $0 -fullemail email firstname lastname ignorefiles"
else
 if [ "$1" = "-fullemail" ]
 then
	shift
	EMAIL=$1
 else
	EMAIL=$1@gmail.com
 fi
 FNAME=$2
 LNAME=$3
 shift
 shift
 shift
 echo "*~" > .gitignore
 echo "*/*~" >> .gitignore
 echo ".vscode" >> .gitignore
 while [ "$1" != "" ]
 do
	echo "$1" >> .gitignore
	shift
 done
 git init
 git config --local core.quotepath false
 git config user.email "$EMAIL"
 git config user.name "$FNAME $LNAME"
 git add .
 git commit -m "first commit"
fi
##### end of file gitfirst
